{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "/isaac-sim/kit/python/bin/python3",
            "envFile": "${workspaceFolder}/.vscode/.standalone_examples.env",
            "preLaunchTask": "setup_python_env"
        },
        {
            "name": "Python: Launch Mission",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/costnav_isaacsim/launch.py",
            "args": [
                "--mission"
            ],
            "console": "integratedTerminal",
            "python": "/isaac-sim/kit/python/bin/python3",
            "envFile": "${workspaceFolder}/.vscode/.standalone_examples.env",
            "preLaunchTask": "setup_python_env",
            "cwd": "${workspaceFolder}/costnav_isaacsim"
        },
        {
            "name": "Python: Attach (windows-x86_64/linux-x86_64)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 3000
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ]
        },
        {
            "name": "(Linux) isaac-sim",
            "type": "cppdbg",
            "request": "launch",
            "program": "/isaac-sim/kit/kit",
            "args": [
                "/isaac-sim/apps/omni.isaac.sim.kit",
                "--ext-folder",
                "/isaac-sim/exts",
                "--ext-folder",
                "/isaac-sim/apps"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                // { "name": "DISPLAY", "value": ":1" }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
