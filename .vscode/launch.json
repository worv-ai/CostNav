{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "/isaac-sim/kit/python/bin/python3",
            "envFile": "${workspaceFolder}/.vscode/.standalone_examples.env",
            "preLaunchTask": "setup_python_env"
        },
        {
            "name": "Python: Teleop (segway_e1, 1 person)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/costnav_isaacsim/launch.py",
            "args": [
                "--robot",
                "segway_e1",
                "--people",
                "1"
            ],
            "console": "integratedTerminal",
            "python": "/isaac-sim/python.sh",
            "envFile": "${workspaceFolder}/.vscode/.standalone_examples.env",
            "preLaunchTask": "setup_python_env",
            "cwd": "${workspaceFolder}/costnav_isaacsim",
            "env": {
                "SIM_ROBOT": "segway_e1",
                "NUM_PEOPLE": "1"
            }
        },
        {
            "name": "Python: Attach (windows-x86_64/linux-x86_64)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 3000
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ]
        },
        {
            "name": "(Linux) isaac-sim",
            "type": "cppdbg",
            "request": "launch",
            "program": "/isaac-sim/kit/kit",
            "args": [
                "/isaac-sim/apps/omni.isaac.sim.kit",
                "--ext-folder",
                "/isaac-sim/exts",
                "--ext-folder",
                "/isaac-sim/apps"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                // { "name": "DISPLAY", "value": ":1" }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Start Mission",
            "type": "node-terminal",
            "request": "launch",
            "command": "make start-mission",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: ViNT Policy Node (ROS2)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/costnav_isaacsim/il_evaluation/src/il_evaluation/nodes/vint_policy_node.py",
            "python": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "--checkpoint",
                "/workspace/checkpoints/vint_nova_carter.pth",
                "--model_config",
                "${workspaceFolder}/costnav_isaacsim/il_evaluation/configs/vint_eval.yaml",
                "--robot_config",
                "${workspaceFolder}/costnav_isaacsim/il_evaluation/configs/robot_carter.yaml",
                // Optional args (uncomment as needed):
                // "--inference_rate", "10.0",
                // "--image_topic", "/front_stereo_camera/left/image_raw",
                "--goal_type",
                "topomap",
                // "--device", "cuda"
                "--log_level",
                "debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.vscode/.ros2_jazzy.env",
            "preLaunchTask": "source_ros2_jazzy",
            "justMyCode": false
        },
        {
            "name": "Python: Trajectory Follower Node (ROS2)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/costnav_isaacsim/il_evaluation/src/il_evaluation/nodes/trajectory_follower_node.py",
            "python": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "--robot_config",
                "${workspaceFolder}/costnav_isaacsim/il_evaluation/configs/robot_segway.yaml",
                "--log_level",
                "debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.vscode/.ros2_jazzy.env",
            "preLaunchTask": "source_ros2_jazzy",
            "justMyCode": false
        }
    ]
}
