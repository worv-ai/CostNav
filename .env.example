# Environment variables for CostNav Docker containers
# Copy this file to .env and customize as needed

# Display settings for GUI applications
DISPLAY=:0
XAUTHORITY=/tmp/.X11-unix

# NVIDIA GPU settings
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=all

# Isaac Sim paths
ISAAC_PATH=/isaac-sim
CARB_APP_PATH=/isaac-sim/kit
EXP_PATH=/isaac-sim/apps

# GPU device IDs (comma-separated list or 'all')
GPU_DEVICE_IDS=0

# Version pins for Docker images
ISAAC_SIM_VERSION=5.1.0
ISAAC_LAB_VERSION=2.2.0
COSTNAV_VERSION=0.1.0

# Dev Container service selection
# Available: isaac-sim (default), isaac-lab, dev, ros2
DEVCONTAINER_SERVICE=isaac-sim

# Add your custom environment variables below
# Example:
# MY_CUSTOM_VAR=value
# API_KEY=your_api_key_here
ACCEPT_EULA=Y
OMNI_KIT_ACCEPT_EULA=YES
OMNI_USER=
OMNI_PASS=

# Joystick settings for teleop
# Set this to your Xbox controller ID (find it in /dev/input/by-id/)
# Example: XBOX_ID=1234567890ABCDEF
XBOX_ID=