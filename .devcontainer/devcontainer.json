{
  // =============================================================================
  // CostNav Dev Container Configuration
  // =============================================================================
  // Select the Docker service to use for the dev container.
  // To select a different service, change the "service" and "runServices" fields below.
  // Available services: isaac-sim (default), isaac-lab, dev, ros2
  // See docker-compose.yml for full service definitions.
  // =============================================================================
  "name": "CostNav",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "docker-compose.override.yml"
  ],
  "service": "${localEnv:DEVCONTAINER_SERVICE:isaac-sim}",
  "runServices": [
    "${localEnv:DEVCONTAINER_SERVICE:isaac-sim}"
  ],
  "overrideCommand": true,
  "workspaceFolder": "/workspace",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "Augment.vscode-augment",
        "ms-vscode.cpptools",
        "openai.chatgpt"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/isaac-sim/kit/python/bin/python3",
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
