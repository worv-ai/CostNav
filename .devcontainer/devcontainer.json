{
  // =============================================================================
  // CostNav Dev Container Configuration
  // =============================================================================
  // To select a different service, set environment variables before opening:
  //
  //   export DEVCONTAINER_SERVICE=isaac-lab
  //
  // Or add to your .env file (copy from .env.example)
  //
  // Available services: isaac-sim (default), isaac-lab, dev, ros2
  // See docker-compose.yml for full service definitions.
  // =============================================================================
  "name": "CostNav",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "${localEnv:DEVCONTAINER_SERVICE:isaac-sim}",
  "runServices": [
    "${localEnv:DEVCONTAINER_SERVICE:isaac-sim}"
  ],
  "overrideCommand": true,
  "workspaceFolder": "/workspace",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "Augment.vscode-augment",
        "ms-vscode.cpptools"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/isaac-sim/kit/python/bin/python3",
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
