{
  "name": "CostNav - Isaac Lab",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "isaac-lab",
  "runServices": [
    "isaac-lab"
  ],
  "workspaceFolder": "/workspace",
  "remoteUser": "root",
  "overrideCommand": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "Augment.vscode-augment"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/isaac-sim/kit/python/bin/python3",
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": [
              "-l"
            ]
          }
        }
      }
    }
  },
  "forwardPorts": [],
  "postCreateCommand": [
    "bash",
    "-lc",
    "printf '%s\\n' '#!/usr/bin/env bash' 'exec /isaac-sim/python.sh \"$@\"' >/usr/local/bin/python && chmod +x /usr/local/bin/python && ln -sf /usr/local/bin/python /usr/local/bin/python3 && uv pip install --python /isaac-sim/python.sh --system -e '.[isaac-lab,dev]'"
  ],
  "remoteEnv": {
    "ACCEPT_EULA": "Y",
    "ISAAC_SIM_PATH": "/isaac-sim",
    "PYTHONPATH": "/isaac-sim/kit/python/bin/python3"
  }
}